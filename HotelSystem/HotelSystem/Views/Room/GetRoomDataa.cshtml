@{
    ViewData["Title"] = "All Room Data";
}
@model List<Room>
<div class="container d-flex flex-column justify-content-center mt-5">
    <div class="row mt-5">
        <div class="col-md-11">
            <table class="table border border-2 p-4 border-warning ms-2">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Type</th>
                        <th> Status </th>
                        <th>price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.RoomId</td>
                            <td>@room.Type</td>
                            <td>@room.Status</td>
                            <td>@room.Price</td>
                            <td>
                                <form asp-action="Update" method="get" asp-route-id="@room.RoomId">
                                    <button type="submit" class="btn btn-success">Update</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>