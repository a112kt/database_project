<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelSystem</title>
    <link rel="stylesheet" href="css/main_style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand ms-4 text-white fs-5" asp-area="" asp-controller="Home" asp-action="Index">Hotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto p-2">
                        <li class="nav-item mx-3">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Home" asp-action="GetRoomData">Available Room</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Room" asp-action="GetRoomDataa">All Room</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Guest" asp-action="Add">Guest</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Reservation" asp-action="RoomReservation">Reservation</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
