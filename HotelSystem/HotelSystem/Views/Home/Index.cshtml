@using HotelSystem.ViewModels

@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/all.min.css">
}

@model Guest

<div class="home">
    <div class="layer d-flex flex-column justify-content-center align-items-center text-center">
        <div class="home-text ">
            <div class=" margin-tb ">
                
                <h1 class="margin-all text-white mt-5"> A DAY IN <span>PARADISE</span></h1>
                <p class="margin-all">. . . a world of seclusion</p>
                <div>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <p class="margin-all">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nisi, quibusdam!</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mt-5">
            <div class="search d-flex flex-column align-items-center">
                <h2 class=" text-center text-warning fw-bolder">Search Guest</h2>
                <form asp-action="Search" method="get">
                    <label class="mx-5 mb-2 mt-5 text-warning">Input Guest Id</label>
                    <div class="input-group mb-3 px-5 ">
                        <input asp-for="GuId" type="text" class="border border-2 px-5 py-2 border-warning" placeholder="ex(15)">
                        <button class=" border border-2 px-5 border-warning bg-primary-subtle text-warning" type="submit" id="button-addon2">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4 mt-5">
            <img src="images/reception.jpg" class="w-100 border border-2 p-1 border-warning" alt="">
        </div>
    </div>
</div>